<h2>All Products</h2>

{{#each products}}

  <div class="product">
    <h3>{{name}}</h3>

    <img class="flowers" src="{{imageUrl}}" alt="{{name}}">

    <p>{{description}}</p>

    <p>Price: {{price}}</p>
  </div>

{{!-- Reviews --}}
 {{!-- <form action="/product/reviews/{{_id}}" method="get">
      <button type="submit">Reviews</button>
    </form> --}}

    <a href="/product/product-details/{{_id}}">Details</a>
  </div>

{{else}}
  <p>No products found.</p>
{{/each}}