<h2>Add Product</h2>

<form action="/product/create-product" method="post">

    <label for="name">Name</label>
    <input id="name" type="text" name="name">

    <label for="description">Description</label>
    <input id="description" type="text" name="description">

    <label for="price">Price</label>
    <input id="price" type="number" name="price">

    <label for="imageUrl">Image</label>
    <input id="imageUrl" type="text" name="imageUrl">

    <button type="submit">Add Product</button>

</form>

{{#each foundProducts}}

  <div class="product">
    <h3>{{name}}</h3>

    <img src="{{imageUrl}}" alt="{{name}}" style="width: 20vw; height: 30vh; object-fit:contain">

    <p>{{description}}</p>

    <p>Price: {{price}}</p>
  
  <form action="/product/delete/{{_id}}" method="post">
        <button type="submit">Delete Product</button>
    </form>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Edit
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit product</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

      <form action="/product/edit-product/{{_id}}" method="post">
        <label for="name">Title</label>
        
        <input type="text" name="name" value="{{name}}"/><label for="description">Description</label>

        <input type="text" name="description" value="{{description}}"/>
               <label for="price">Price</label> <input type="number" name="price" value="{{price}}"/>
        <label for="imageUrl">Image</label>
        <input type="text" name="imageUrl" value="{{imageUrl}}"/>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      </form>
      </div>
     
    </div>
  </div>
</div>
  </div>

{{else}}
  <p>No products found.</p>
{{/each}}